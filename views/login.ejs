<%- include('partials/header') -%>
<body class="backgroundLogin">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-sm-12 box">
        <h1 class="display-4">Login</h1>
        <form action="/login" method="post">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="text"
              class="form-control"
              id="email"
              name="email"
              required
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            />
          </div>
          <div class="row">
            <button type="submit" class="btn btn-dark mt-3 mx-2 col-md-5 col-sm-10">
              Login
            </button>
            <a
              class="btn btn-light mt-3 mx-2 col-md-5 col-sm-10"
              role="button"
              href="/register"
            >
              Register
            </a>
          </div>
        </form>
      </div>
      <div class="col-md-6 col-sm-12 cards mt-0">
        <div class="row social-btn">
          <div class="card social-block bg-transparent">
            <div class="card-body p-0">
              <a
                class="btn btn-block btn-social btn-google"
                href="/auth/google"
                role="button"
              >
                <i class="fab fa-google pe-1"></i> Sign Up with Google
              </a>
            </div>
          </div>
        </div>
        <div class="row social-btn">
          <div class="card social-block bg-transparent">
            <div class="card-body p-0">
              <a
                class="btn btn-block btn-social btn-facebook"
                href="/auth/google"
                role="button"
              >
                <i class="fa-brands fa-facebook-f"></i> Sign Up with Facebook
              </a>
            </div>
          </div>
        </div>
        <div class="row social-btn">
          <div class="card social-block bg-transparent">
            <div class="card-body p-0">
              <a
                class="btn btn-block btn-social btn-twitter"
                href="/auth/google"
                role="button"
              >
                <i class="fa-brands fa-twitter"></i> Sign Up with Twitter
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') -%>
</body>
